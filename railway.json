{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm run build && cp -r .next/static .next/standalone/.next/ && cp -r public .next/standalone/ && cp -r content .next/standalone/"
  },
  "deploy": {
    "startCommand": "cd .next/standalone && PORT=${PORT:-3000} HOSTNAME=0.0.0.0 node server.js",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
